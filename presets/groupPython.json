{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "devcontainer",
    "github-actions",
    "pep621",
    "pyenv"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "devcontainer",
        "github-actions",
        "pep621",
        "pyenv"
      ],
      "description": "Restrict Python versions to the current minor release only and group all updates together",
      "matchPackageNames": [
        "python"
      ],
      "groupName": "Project Python version",
      "groupSlug": "project-python-version"
    }
  ]
}
